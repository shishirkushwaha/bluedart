@model BlueDart.Registration.ViewModels.OrderViewModel
@{
    ViewData["Title"] = "Home Page";
}
<div>
    <img src="/images/bluedart.svg" width="500" height="200" style="display: block;margin: auto;">
    <h2 class="mb-5" style="text-align: center;">Order registration</h2>
</div>
<form asp-controller="Home" asp-action="RegisterOrder">
    <div class="row">
        <div class="col-md-4">
            <h4 class="mb-3">Pick up from</h4>
            <div class="form-group">
                <label asp-for="PickupName"></label>
                <select asp-for="PickupName" class="form-control">
                    <option value="Rahul">Rahul</option>
                    <option value="Marcus">Marcus</option>
                    <option value="Imtiaz">Imtiaz</option>
                    <option value="Mandeep">Mandeep</option>
                    <option value="Hoffman">Hoffman</option>
                    <option value="Michael">Michael</option>
                    <option value="Bryan">Bryan</option>
                    <option value="Takashi">Takashi</option>
                    <option value="Tanya">Tanya</option>
                    <option value="Marcus">Marcus</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="PickupAddress"></label>
                <select asp-for="PickupAddress" class="form-control">
                    <option value="Sports Club">Sports Club</option>
                    <option value="Hotel Plaza">Hotel Plaza</option>
                    <option value="Nagarro Office">Nagarro Office</option>
                    <option value="Cantt Area">Cantt Area</option>
                    <option value="Defence Colony">Defence Colony</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="PickupCity"></label>
                <select asp-for="PickupCity" class="form-control">
                    <option value="New Delhi">New Delhi</option>
                    <option value="Bengaluru">Bengaluru</option>
                    <option value="Mumbai">Mumbai</option>
                    <option value="Chennai">Chennai</option>
                    <option value="Pune">Pune</option>
                </select>
            </div>
        </div>
        <div class="col-md-4">
            <h4 class="mb-3">Deliver to</h4>
            <div class="form-group">
                <label asp-for="DeliverName"></label>
                <select asp-for="DeliverName" class="form-control">
                    <option value="Rahul">Rahul</option>
                    <option value="Marcus">Marcus</option>
                    <option value="Imtiaz">Imtiaz</option>
                    <option value="Mandeep">Mandeep</option>
                    <option value="Hoffman">Hoffman</option>
                    <option value="Michael">Michael</option>
                    <option value="Bryan">Bryan</option>
                    <option value="Takashi">Takashi</option>
                    <option value="Tanya">Tanya</option>
                    <option value="Marcus">Marcus</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="DeliverAddress"></label>
                <select asp-for="DeliverAddress" class="form-control">
                    <option value="Sports Club">Sports Club</option>
                    <option value="Hotel Plaza">Hotel Plaza</option>
                    <option value="Nagarro Office">Nagarro Office</option>
                    <option value="Cantt Area">Cantt Area</option>
                    <option value="Defence Colony">Defence Colony</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="DeliverCity"></label>
                <select asp-for="DeliverCity" class="form-control">
                    <option value="New Delhi">New Delhi</option>
                    <option value="Bengaluru">Bengaluru</option>
                    <option value="Mumbai">Mumbai</option>
                    <option value="Chennai">Chennai</option>
                    <option value="Pune">Pune</option>
                </select>
            </div>
        </div>
        <div class="col-md-4">
            <h4 class="mb-3">Package info</h4>
            <div class="form-group">
                <label asp-for="Weight"></label>
                <input asp-for="Weight" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Fragile"></label>
                <input asp-for="Fragile" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Oversized"></label>
                <input asp-for="Oversized" class="form-control" />
            </div>
        </div>
    </div>
    <input type="submit" class="btn btn-info" value="Submit" />
</form>
